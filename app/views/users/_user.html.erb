<div id="<%= dom_id user %>", style='padding-top = 20%'>
  
  <h1> <%= user.first_name %>'s Errors </h1>
  <table class="table">
  <thead>
    <tr>
      <th scope="col">Error Name</th>
      <th scope="col">Severity</th>
      <th scope="col">Note</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
    <% @user_errors.each do |user_error| %>
    <% if (user_error.user_id == user.id)%>
      <tr>
        <td> <%= user_error.error.name%> </td>
        <td> <%= user_error.error.severity %> </td>
        <td> <%= user_error.note %> </td>
        <td> <%= user_error.date %> </td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table> 

<p>
    <strong>First name:</strong>
    <%= user.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= user.last_name %>
  </p>

  <p>
    <strong>Full Name:</strong>
    <%= user.full_name%>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

</div>
